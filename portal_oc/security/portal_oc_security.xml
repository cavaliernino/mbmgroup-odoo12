<?xml version="1.0" ?>
<odoo>
  <record id="module_portal_oc_category" model="ir.module.category">
    <field name="name">PortalOC</field>
  </record>

  <!-- PortalOC User Group -->
  <record id="portal_oc_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id"
           ref="module_portal_oc_category"/>
    <field name="implied_ids"
           eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- PortalOC Manager Group -->
  <record id="portal_oc_group_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id"
           ref="module_portal_oc_category"/>
    <field name="implied_ids"
           eval="[(4, ref('portal_oc_group_user'))]"/>
    <field name="users"
           eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
  </record>


  <data noupdate="1">
    <record id="portal_oc_stage_user_rule" model="ir.rule">
      <field name="name">PortalOC Stage User Access</field>
      <field name="model_id" ref="model_portal_oc_stage"/>
      <field name="domain_force">
          [('active','=',True)]
      </field>
      <field name="groups" eval="[(4,ref('portal_oc_group_user'))]"/>
    </record>
  </data>

</odoo>
